@{
    ViewData["Title"] = "Home Page";
}

@*Plano de fundo da tela - Index*@
<style>
    body {
        background-image: url('https://github.com/VictorLueders/ImagemTelaSite/blob/main/Tela1.png?raw=true');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

@*lbl Cadastro*@
<div style="font-size: 45px; font-family: Georgia; position:absolute; top:35.7%; left: 83.4%;">
    <label>Cadastro</label>
</div>


@*Inserção do usuário(Nome, CPF e RG)*@
<form action="/Home/Emergency" method="post" class="text-center" style="position:absolute; top:67%; left: 89.7%; margin-right: -50%; transform: translate(-50%, -50%); font-size: 20px;">


    <div>
        <label>Insira seu nome</label><br />
        <input type="text" name="Nome" placeholder="Nome" />

    </div>

    <div>
        <label>Insira seu CPF</label><br />
        <input type="text" name="Cpf" placeholder="000.000.000-00" />

    </div>

    <div>
        <label>Insira seu RG</label><br />
        <input type="text" name="Rg" placeholder="RG" />

    </div>

    <br />
    <input class="btn btn-green" ; type="submit" name="Cadastrar" value="Cadastrar"; top: 80%; left: 120%; margin-right: -50%; transform: translate(-50%, -50%);" />

</form>








