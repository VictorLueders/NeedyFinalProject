@{
    ViewData["title"] = "Waiting";
}


<style>
    body {
        background-image: url('https://github.com/VictorLueders/ImagemTelaSite/blob/main/TelaAguardo.png?raw=true');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .wait {
        background: #006000;
        box-shadow: 0 5px 0 #006000;
        color: #fff;
        position: relative;
        top: 420px;
        left: 25%;
        width: 100%;
        height: 30%;
        margin-right: -50%;
        transform: translate(-50%, -50%)
    }
        .wait:hover {
            background: #006000;
            color: #fff;
            box-shadow: 0 5px 0 #003f00;
        }
</style>


<form action="/Home/Index" method="post" style="position: absolute; top: 10%; left:58%; text-align:center;">

    <div>

        <label style="font-size: 35px; color: white;"><b>Chamamos os serviços para você.</b></label>
        <br />
        <label style="font-size: 30px; color: white;">Favor aguardar no local de chamada.</label>

    </div>

    <input type="submit" class="wait" name="btnVoltar" value="Voltar" />

</form>